{
    "version": 4,
    "configurations": [
        {
            "name": "STM32",
            "includePath": [
                // 包含所有头文件路径
                "${workspaceFolder}/Core/Inc",
                "${workspaceFolder}/Drivers/STM32F1xx_HAL_Driver/Inc",
                "${workspaceFolder}/Drivers/CMSIS/Device/ST/STM32F1xx/Include",
                "${workspaceFolder}/Drivers/CMSIS/Include",
                "${workspaceFolder}/Drivers/ThridParty",
                "D:/Projects/STM32/arm-gnu-toolchain-14.3.rel1-mingw-w64-i686-arm-none-eabi/arm-none-eabi/include"
            ],
            "defines": [
                // 你的项目全局宏定义，通常来自 Makefile 中的 -D  flags
                "USE_HAL_DRIVER",
                "STM32F103xE"
            ],
            "compilerPath": "D:/Projects/STM32/arm-gnu-toolchain-14.3.rel1-mingw-w64-i686-arm-none-eabi/bin/arm-none-eabi-gcc.exe",
            "cStandard": "gnu11",
            "cppStandard": "gnu++14",
            "intelliSenseMode": "gcc-arm",
            // 告知 IntelliSense 我们为 ARM 目标编译
            "browse": {
                "path": [
                    // ... 可以包含 includePath 中的所有路径 ...
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ]
}